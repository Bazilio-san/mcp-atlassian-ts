# Atlassian Configuration
ATLASSIAN_URL=https://your-domain.atlassian.net
ATLASSIAN_EMAIL=your-email@company.com

# Authentication - Use ONE of these methods:
# Basic Auth (Legacy)
ATLASSIAN_API_TOKEN=your-api-token

# Personal Access Token (Recommended)
ATLASSIAN_PAT=your-personal-access-token

# OAuth 2.0 (Advanced)
ATLASSIAN_OAUTH_CLIENT_ID=your-oauth-client-id
ATLASSIAN_OAUTH_CLIENT_SECRET=your-oauth-client-secret
ATLASSIAN_OAUTH_REDIRECT_URI=http://localhost:3000/oauth/callback
ATLASSIAN_OAUTH_ACCESS_TOKEN=your-oauth-access-token
ATLASSIAN_OAUTH_REFRESH_TOKEN=your-oauth-refresh-token

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-secret-key-here

# Transport Configuration
TRANSPORT_TYPE=http
# Options: stdio, http, sse

# SSL/TLS Configuration
NODE_TLS_REJECT_UNAUTHORIZED=1
SSL_VERIFY_PEER=true

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_ITEMS=1000

# Tool Configuration (comma-separated list of enabled tools)
# Leave empty to enable all tools
ENABLED_TOOLS=

# JIRA Specific Settings
JIRA_MAX_RESULTS=50
JIRA_DEFAULT_PROJECT=

# Confluence Specific Settings
CONFLUENCE_DEFAULT_SPACE=
CONFLUENCE_MAX_RESULTS=50

# Logging Configuration
LOG_FILE_PATH=./logs/mcp-atlassian.log
LOG_MAX_FILES=7
LOG_MAX_SIZE=10m

# Development Settings
DEBUG=false
