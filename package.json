{
  "name": "mcp-atlassian-ts",
  "version": "1.0.0",
  "description": "Modern TypeScript MCP server for Atlassian JIRA and Confluence with comprehensive features and robust architecture",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:stdio": "tsx src/index.ts",
    "build": "tsc",
    "build:clean": "rimraf dist && npm run build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t mcp-atlassian-ts .",
    "docker:run": "docker run -p 3000:3000 --env-file .env mcp-atlassian-ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "atlassian",
    "jira",
    "confluence",
    "typescript",
    "ai",
    "automation"
  ],
  "author": {
    "name": "Viacheslav Makarov",
    "email": "npmjs@bazilio.ru"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bazilio-san/mcp-atlassian-ts.git"
  },
  "homepage": "https://github.com/Bazilio-san/mcp-atlassian-ts#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.3",
    "axios": "^1.6.7",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "helmet": "^7.1.0",
    "joi": "^17.12.2",
    "node-cache": "^5.1.2",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "rate-limiter-flexible": "^5.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "eslint-config-at-25": "^25.9.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  }
}
