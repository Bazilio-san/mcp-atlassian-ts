{
  "name": "mcp-atlassian-ts",
  "version": "1.0.81",
  "description": "Modern TypeScript MCP server for Atlassian JIRA and Confluence with comprehensive features and robust architecture",
  "main": "dist/src/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/src/index.js",
    "start:jira": "node dist/src/index.js --service jira",
    "start:confluence": "node dist/src/index.js --service confluence",
    "build": "tsc",
    "clean": "rimraf dist",
    "cb": "npm run clean && npm run build",
    "ci": "node --no-deprecation ./_sh/npm/run.js",
    "dev": "tsx watch src/index.ts",
    "dev:jira": "tsx src/index.ts --service jira",
    "dev:confluence": "tsx src/index.ts --service confluence",
    "dev:stdio": "tsx src/index.ts",
    "docker:build": "docker build -t mcp-atlassian-ts .",
    "docker:run": "docker run -p 3000:3000 --env-file .env mcp-atlassian-ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "reinstall": "node --no-deprecation ./_sh/npm/run.js reinstall",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "atlassian",
    "jira",
    "confluence",
    "typescript",
    "ai",
    "automation"
  ],
  "author": {
    "name": "Viacheslav Makarov",
    "email": "npmjs@bazilio.ru"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bazilio-san/mcp-atlassian-ts.git"
  },
  "homepage": "https://github.com/Bazilio-san/mcp-atlassian-ts#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.3",
    "axios": "^1.6.7",
    "chalk": "^5.6.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.3",
    "helmet": "^7.1.0",
    "joi": "^17.12.2",
    "js-yaml": "^4.1.0",
    "luxon": "^3.7.2",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "rate-limiter-flexible": "^5.0.3",
    "yaml": "^2.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/config": "^3.3.5",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/yaml": "^1.9.6",
    "eslint-config-at-25": "^25.9.6",
    "eslint-plugin-unused-imports": "^4.2.0",
    "glob": "^11.0.3",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.9.2"
  }
}
